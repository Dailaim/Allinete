{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],

  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^build.lib"],
      "cache": false,
      "persistent": true
    },
    "build.lib": {
      "outputs": ["dist/**", "lib/**"]
    }
  }
}
